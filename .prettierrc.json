{
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "options": {
        "parser": "typescript",
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 100,
        "trailingComma": "es5",
        "arrowParens": "always",
        "endOfLine": "lf",
        "bracketSpacing": true,
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false,
        "useTabs": false,
        "quoteProps": "as-needed",
        "plugins": ["prettier-plugin-tailwindcss"]
      }
    },
    {
      "files": ["src-tauri/**/*.rs"],
      "options": {
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 100,
        "endOfLine": "lf"
      }
    }
  ]
}
